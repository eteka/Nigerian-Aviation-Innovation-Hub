{
  "name": "nigeria-aviation-innovation-hub",
  "version": "1.0.0",
  "description": "Aviation Innovation Hub for Nigeria - connecting innovators with regulators",
  "main": "server/index.js",
  "scripts": {
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "db:migrate": "node server/db/bootstrap.js",
    "db:seed:prod": "node scripts/seed-prod.js",
    "db:test": "node test-db-abstraction.js",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "start:dev": "cross-env NODE_ENV=development node server/index.js",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d && node -e \"setTimeout(() => require('child_process').execSync('sh scripts/docker-init-dev.sh', {stdio: 'inherit'}), 3000)\"",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d && docker-compose -f docker-compose.prod.yml exec -T api sh scripts/docker-init-prod.sh",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "keywords": [
    "aviation",
    "innovation",
    "nigeria",
    "regulatory"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0"
  }
}
