# Docker Production Environment Configuration

# Database Configuration
DB_NAME=aviation_hub
DB_USER=aviation_user
DB_PASSWORD=your_secure_database_password_here

# JWT Secret (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Initial Admin Setup
INITIAL_ADMIN_EMAIL=admin@aviation.gov.ng
INITIAL_ADMIN_PASSWORD=SecurePassword123!
INITIAL_ADMIN_NAME=System Administrator

# Port Configuration
API_PORT=5000
WEB_PORT=80

# CORS Configuration (set to your frontend URL)
CORS_ORIGIN=http://localhost
